# ANSWER ME
def calculate(n):
  s = 0.0
  for i in range(n+1):
    s += 1/((4*i + 3)*(4*i + 1)) 
  s *= 8
  return s 
 
 
for val in [10, 100, 10000, 1000000]:
  print(f"{val}, {calculate(val)}, {np.pi - calculate(val)}")


