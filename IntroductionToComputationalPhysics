def DrawCircle():
  plt.plot([math.cos(i*np.pi/5000) for i in range(10000)],[math.sin(i*np.pi/5000) for i in range(10000)])

DrawCircle()
plt.axis('scaled') # this makes your circle look like a circle and not an oval
plt.show()
